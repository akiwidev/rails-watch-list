<div class="container mt-3">
  <h1>Movie lists</h1>
  <% @lists.each do |list| %>
    <%= link_to(list_path(list), {class: "no-text-decoration"}) do %>
      <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <%= list.name %>
      </div>
    <% end %>
  <% end %>
  <%= link_to "New list", new_list_path, {class: "btn btn-primary"} %>
</div>
