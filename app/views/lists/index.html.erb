<div class="container mt-3">
  <h1>Movie lists</h1>
  <ul class="list-group mb-3">
    <% @lists.each do |list| %>
      <li class="list-group-item d-flex justify-content-between"><%= list.name %>
        <%= link_to (list_path(list)) do %>
          <i class="fas fa-eye"></i>
        <% end %></li>
    <% end %>
  </ul>
  <p><%= link_to "New list", new_list_path %></p>
</div>
