<div class="container mt-3">
  <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path('app/assets/images/pexels-cottonbro-3945317.jpg') %>)">
    <%= @list.name %>
  </div>
  <% @list.bookmarks.each do |bookmark|%>
    <div class="card-product mb-3">
      <%= image_tag bookmark.movie.poster_url%>
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.comment %></p>
        <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'Delete this movie?' } %>
      </div>
    </div>
  <% end %>
  <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-primary mb-3"%>
</div>
<%= link_to "Go back", lists_path, class: "no-text-decoration m-4" %>
