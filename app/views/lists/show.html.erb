<div class="container mt-3">
  <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <%= @list.name %>
  </div>

  <% @list.bookmarks.each do |bookmark|%></p>
  <div class="card-product mb-3">
    <img src= <%= bookmark.movie.poster_url%> />
  <div class="card-product-infos">
    <h2><%= bookmark.movie.title %></h2>
    <p><%= bookmark.comment %></p>
    <p><%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'Delete this movie?' } %></p>
  </div>
</div>
<% end %>
<%= link_to "Add Movie", new_list_bookmark_path(@list.id)%>
<%= link_to "Go back", lists_path %>
</div>
