<div class="container mt-3">
  <h1>New Bookmark</h1>
  <%= simple_form_for [ @list, @bookmark ] do |f| %>
    <%= f.input :comment %>
    <%= f.input :movie_id %>
    <%= f.input :list_id %>
    <%= f.submit "Create", class: "btn btn-primary mb-3" %>
  <% end %>
  <p><%= link_to "Go back", list_path(params[:list_id]) %></p>
</div>
